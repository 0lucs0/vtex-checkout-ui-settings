{
  "name": "checkout",
  "version": "0.0.3",
  "description": "Checkout project",
  "main": "index.ts",
  "repository": "",
  "author": "Luis C. Rojas <luis.rojas@itglobers.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node esbuild.mjs",
    "build": "NODE_ENV=production node esbuild.mjs",
    "dev:link": "yarn dev & vtex link",
    "lint": "eslint --cache --ext js,jsx,ts,tsx .",
    "format": "pretty-quick --write \"**/*.{ts,tsx,js,jsx,json,scss}\"",
    "prepare": "husky install",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "pretty-quick --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/eslint-plugin": "^7.22.10",
    "@babel/preset-env": "^7.22.20",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/jquery": "^3.5.22",
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "babel-loader": "^9.1.3",
    "conventional-changelog-angular": "^7.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "esbuild": "^0.25.0",
    "esbuild-sass-plugin": "^2.16.0",
    "eslint": "^8.51.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jshint": "^2.13.6",
    "lint-staged": "^14.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.3",
    "pretty-quick": "^3.1.3",
    "sass": "^1.69.1",
    "sass-loader": "^13.3.2",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "5.2.2",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
}
